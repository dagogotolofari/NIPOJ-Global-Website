@inherits LayoutComponentBase
@inject AssetManifestService AssetManifestService
@inject ContentService ContentService
<div class="page">
    <header class="site-header">
        <NavMenu />
    </header>

    <main class="site-main">
        <div class="container py-4">
            @if (isInitializing)
            {
                <p class="text-muted">Loading content...</p>
            }
            else if (!string.IsNullOrWhiteSpace(ContentService.Error))
            {
                <div class="alert alert-danger" role="alert">
                    Unable to load site content. @ContentService.Error
                </div>
            }
            else
            {
                @Body
            }
        </div>
    </main>

    <footer class="site-footer">
        <div class="container py-5">
            <div class="row g-4">
                <div class="col-12 col-lg-3">
                    <div class="d-flex align-items-center gap-3 mb-3">
                        <svg class="globe-icon" width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <circle cx="12" cy="20" r="9" stroke="currentColor" stroke-width="1.5" fill="none"/>
                            <path d="M12 11c-2.5 3-2.5 6 0 9m0-9c2.5 3 2.5 6 0 9m-6-4.5h12" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
                            <circle cx="28" cy="20" r="9" stroke="currentColor" stroke-width="1.5" fill="none"/>
                            <path d="M28 11c-2.5 3-2.5 6 0 9m0-9c2.5 3 2.5 6 0 9m-6-4.5h12" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
                        </svg>
                        <div>
                            <h3 class="h6 mb-1" style="color: rgba(255, 255, 255, 0.9);">NIPOJ Global</h3>
                            <p class="small mb-0 text-muted">Engineering Excellence Since 2003</p>
                        </div>
                    </div>
                    <p class="text-muted small">@content?.Tagline</p>
                </div>
                <div class="col-12 col-md-6 col-lg-3">
                    <h4 class="h6 text-uppercase mb-3" style="color: var(--brand-gold); letter-spacing: 0.05em;">Services</h4>
                    <ul class="list-unstyled text-muted small">
                        @if (content?.Services != null)
                        {
                            @foreach (var service in content.Services)
                            {
                                <li class="mb-2">@service.Category</li>
                            }
                        }
                    </ul>
                </div>
                <div class="col-12 col-md-6 col-lg-3">
                    <h4 class="h6 text-uppercase mb-3" style="color: var(--brand-gold); letter-spacing: 0.05em;">Quick Links</h4>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="about" class="footer-link">About</a></li>
                        <li class="mb-2"><a href="services" class="footer-link">Services</a></li>
                        <li class="mb-2"><a href="policies" class="footer-link">Policies</a></li>
                        <li class="mb-2"><a href="partners" class="footer-link">Partners</a></li>
                        <li class="mb-2"><a href="contact" class="footer-link">Contact</a></li>
                    </ul>
                </div>
                <div class="col-12 col-lg-3">
                    <h4 class="h6 text-uppercase mb-3" style="color: var(--brand-gold); letter-spacing: 0.05em;">Contact</h4>
                    <ul class="list-unstyled text-muted small">
                        <li class="mb-2">@content?.Contact.Address</li>
                        <li class="mb-2"><a href="mailto:@content?.Contact.Email" class="footer-link">@content?.Contact.Email</a></li>
                        <li class="mb-2">@content?.Contact.Phone1</li>
                        <li class="mb-2"><a href="https://@content?.Contact.Website" target="_blank" class="footer-link">@content?.Contact.Website</a></li>
                    </ul>
                    <div class="mt-3">
                        <h5 class="h6 text-uppercase mb-2" style="color: var(--brand-gold); letter-spacing: 0.05em; font-size: 0.75rem;">Certifications</h5>
                        <ul class="list-unstyled text-muted" style="font-size: 0.75rem;">
                            @if (content?.Certifications != null)
                            {
                                @foreach (var cert in content.Certifications.Take(3))
                                {
                                    <li class="mb-1">@cert</li>
                                }
                            }
                        </ul>
                    </div>
                </div>
            </div>
            <hr class="my-4" style="border-color: rgba(255, 255, 255, 0.1);" />
            <div class="row">
                <div class="col-12 col-md-6 text-center text-md-start">
                    <p class="text-muted small mb-0">© @DateTime.Now.Year NIPOJ Global Services Limited. All rights reserved.</p>
                </div>
                <div class="col-12 col-md-6 text-center text-md-end">
                    <p class="text-muted small mb-0">RC: @content?.RCNumber | Est. @content?.Established</p>
                </div>
            </div>
        </div>
    </footer>
</div>

@code {
    private AssetManifest? assetManifest;
    private SiteContent? content;
    private bool isInitializing = true;

    protected override async Task OnInitializedAsync()
    {
        await ContentService.InitializeAsync();
        var manifestTask = AssetManifestService.GetManifestAsync();
        var contentTask = ContentService.GetContentAsync();
        await Task.WhenAll(manifestTask, contentTask);
        assetManifest = manifestTask.Result;
        content = contentTask.Result;
        isInitializing = false;
    }
}
