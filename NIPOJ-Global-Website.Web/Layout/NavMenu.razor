@inject AssetManifestService AssetManifestService

<nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom">
    <div class="container">
        <NavLink class="navbar-brand d-flex align-items-center gap-2" href="" Match="NavLinkMatch.All">
            <div class="brand-icon">
                <svg class="globe-icon" width="50" height="28" viewBox="0 0 100 56" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <defs>
                        <radialGradient id="oceanGradient" cx="50%" cy="30%">
                            <stop offset="0%" style="stop-color:#1e40af;stop-opacity:1" />
                            <stop offset="100%" style="stop-color:#0c2340;stop-opacity:1" />
                        </radialGradient>
                        <radialGradient id="landGradient" cx="50%" cy="40%">
                            <stop offset="0%" style="stop-color:#fbbf24;stop-opacity:1" />
                            <stop offset="100%" style="stop-color:#c5a253;stop-opacity:1" />
                        </radialGradient>
                        <radialGradient id="gloss" cx="40%" cy="30%">
                            <stop offset="0%" style="stop-color:#ffffff;stop-opacity:0.4" />
                            <stop offset="100%" style="stop-color:#ffffff;stop-opacity:0" />
                        </radialGradient>
                    </defs>
                    <!-- Left Globe -->
                    <circle cx="22" cy="28" r="21" fill="url(#oceanGradient)" stroke="#cbd5e1" stroke-width="0.5"/>
                    <path d="M 15 18 Q 18 22 15 26 Q 12 22 15 18 M 28 15 Q 32 18 31 23 Q 28 20 28 15 M 10 25 L 34 25" fill="url(#landGradient)" opacity="0.9"/>
                    <ellipse cx="18" cy="18" rx="8" ry="5" fill="url(#landGradient)" opacity="0.8"/>
                    <ellipse cx="28" cy="24" rx="6" ry="4" fill="url(#landGradient)" opacity="0.7"/>
                    <circle cx="22" cy="28" r="21" fill="url(#gloss)" opacity="0.5"/>
                    <!-- Right Globe -->
                    <circle cx="72" cy="28" r="21" fill="url(#oceanGradient)" stroke="#cbd5e1" stroke-width="0.5"/>
                    <path d="M 65 18 Q 68 22 65 26 Q 62 22 65 18 M 78 15 Q 82 18 81 23 Q 78 20 78 15 M 60 25 L 84 25" fill="url(#landGradient)" opacity="0.9"/>
                    <ellipse cx="68" cy="18" rx="8" ry="5" fill="url(#landGradient)" opacity="0.8"/>
                    <ellipse cx="78" cy="24" rx="6" ry="4" fill="url(#landGradient)" opacity="0.7"/>
                    <circle cx="72" cy="28" r="21" fill="url(#gloss)" opacity="0.5"/>
                </svg>
            </div>
            <span class="brand-text">NIPOJ Global</span>
        </NavLink>
        <button class="navbar-toggler" type="button" @onclick="ToggleNavMenu" aria-controls="mainNav" aria-expanded="@(!collapseNavMenu)" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="@NavMenuCssClass" id="mainNav" @onclick="CollapseNavMenu">
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <NavLink class="nav-link" href="" Match="NavLinkMatch.All">Home</NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="about">About</NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="services">Services</NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="policies">Policies</NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="partners">Partners</NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="contact">Contact</NavLink>
                </li>
            </ul>
        </div>
    </div>
</nav>

@code {
    private bool collapseNavMenu = true;
    private AssetManifest? assetManifest;

    private string NavMenuCssClass => collapseNavMenu ? "collapse navbar-collapse" : "navbar-collapse show";

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private void CollapseNavMenu()
    {
        collapseNavMenu = true;
    }

    protected override async Task OnInitializedAsync()
    {
        assetManifest = await AssetManifestService.GetManifestAsync();
    }
}
