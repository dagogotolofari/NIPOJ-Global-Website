@inject AssetManifestService AssetManifestService

<nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom">
    <div class="container">
        <NavLink class="navbar-brand d-flex align-items-center gap-2" href="" Match="NavLinkMatch.All">
            <div class="brand-icon">
                <svg class="globe-icon" width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <circle cx="12" cy="20" r="9" stroke="currentColor" stroke-width="1.5" fill="none"/>
                    <path d="M12 11c-2.5 3-2.5 6 0 9m0-9c2.5 3 2.5 6 0 9m-6-4.5h12" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
                    <circle cx="28" cy="20" r="9" stroke="currentColor" stroke-width="1.5" fill="none"/>
                    <path d="M28 11c-2.5 3-2.5 6 0 9m0-9c2.5 3 2.5 6 0 9m-6-4.5h12" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
                </svg>
            </div>
            <span class="brand-text">NIPOJ Global</span>
        </NavLink>
        <button class="navbar-toggler" type="button" @onclick="ToggleNavMenu" aria-controls="mainNav" aria-expanded="@(!collapseNavMenu)" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="@NavMenuCssClass" id="mainNav" @onclick="CollapseNavMenu">
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <NavLink class="nav-link" href="" Match="NavLinkMatch.All">Home</NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="about">About</NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="services">Services</NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="policies">Policies</NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="partners">Partners</NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="contact">Contact</NavLink>
                </li>
            </ul>
        </div>
    </div>
</nav>

@code {
    private bool collapseNavMenu = true;
    private AssetManifest? assetManifest;

    private string NavMenuCssClass => collapseNavMenu ? "collapse navbar-collapse" : "navbar-collapse show";

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private void CollapseNavMenu()
    {
        collapseNavMenu = true;
    }

    protected override async Task OnInitializedAsync()
    {
        assetManifest = await AssetManifestService.GetManifestAsync();
    }
}
