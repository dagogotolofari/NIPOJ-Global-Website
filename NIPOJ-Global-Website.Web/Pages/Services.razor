@page "/services"

<PageTitle>Services</PageTitle>

@if (content is null || assetManifest is null)
{
    <p class="text-muted">Loading content...</p>
}
else
{
    <div class="page-hero">
        <h1 class="display-6 fw-semibold">Services</h1>
        <p class="text-muted mb-0">@content.Tagline</p>
    </div>

    <nav class="nav nav-pills gap-2 mb-4">
        @foreach (var link in ServiceImages)
        {
            <a class="nav-link" href="@link.Anchor">@link.Item.Category</a>
        }
    </nav>

    @foreach (var service in ServiceImages)
    {
        <div class="row g-4 align-items-center page-section fade show" id="@service.Anchor.TrimStart('#')">
            <div class="col-12 col-lg-5">
                <div class="card image-card shadow-sm border-0 transition">
                    <img class="card-img-top service-banner" src="@service.Image" alt="@service.Item.Category" />
                </div>
            </div>
            <div class="col-12 col-lg-7">
                <h2 class="h5 text-uppercase text-primary">@service.Item.Category</h2>
                <p class="text-muted mb-0">@service.Item.Description</p>
            </div>
        </div>
    }
}

@code {
    [Inject]
    public ContentService ContentService { get; set; } = default!;

    [Inject]
    public AssetManifestService AssetManifestService { get; set; } = default!;

    private SiteContent? content;
    private AssetManifest? assetManifest;
    private IReadOnlyList<(ServiceItem Item, string Image, string Anchor)> ServiceImages { get; set; } = Array.Empty<(ServiceItem, string, string)>();

    protected override async Task OnInitializedAsync()
    {
        var contentTask = ContentService.GetContentAsync();
        var manifestTask = AssetManifestService.GetManifestAsync();
        await Task.WhenAll(contentTask, manifestTask);
        content = contentTask.Result;
        assetManifest = manifestTask.Result;
        ServiceImages = BuildServiceImages();
    }

    private IReadOnlyList<(ServiceItem Item, string Image, string Anchor)> BuildServiceImages()
    {
        if (content is null || assetManifest is null || content.Services.Count == 0)
        {
            return Array.Empty<(ServiceItem, string, string)>();
        }

        var images = new[]
        {
            assetManifest.MaritimeOilGas,
            assetManifest.Diving,
            assetManifest.Power
        };

        var anchors = new[]
        {
            "#maritime",
            "#diving",
            "#power"
        };

        return content.Services
            .Select((item, index) => (Item: item, Image: index < images.Length ? images[index] : string.Empty, Anchor: index < anchors.Length ? anchors[index] : "#"))
            .Where(entry => !string.IsNullOrWhiteSpace(entry.Image))
            .ToList();
    }
}
