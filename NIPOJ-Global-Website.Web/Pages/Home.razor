@page "/"

<PageTitle>Home</PageTitle>

@if (content is null || assetManifest is null)
{
    <p class="text-muted">Loading content...</p>
}
else
{
    <section class="hero text-white" style="background-image: url('@assetManifest.Hero');">
        <div class="hero-overlay">
            <div class="container">
                <div class="row align-items-center g-4">
                    <div class="col-12 col-lg-7">
                        <h1 class="display-5 fw-semibold">@content.CompanyName</h1>
                        <p class="lead">@content.Tagline</p>
                        <div class="d-flex flex-wrap gap-2">
                            <a class="btn btn-primary" href="services">Our Services</a>
                            <a class="btn btn-outline-light" href="contact">Contact Us</a>
                        </div>
                    </div>
                    <div class="col-12 col-lg-5 text-lg-end">
                        <div class="d-inline-flex flex-column align-items-start align-items-lg-end gap-1">
                            <span class="text-uppercase small">RC Number: @content.RCNumber</span>
                            <span class="text-uppercase small">Established @content.Established</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="container py-5">
        <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-4">
            <div>
                <h2 class="h4 fw-semibold mb-1">Sectors We Serve</h2>
                <p class="text-muted mb-0">@content.AboutText</p>
            </div>
            <a class="btn btn-outline-primary" href="services">Learn More</a>
        </div>
        <div class="row g-4">
            @foreach (var sector in SectorCards)
            {
                <div class="col-12 col-md-4">
                    <div class="card image-card h-100 shadow-sm">
                        <img class="card-img-top" src="@sector.Image" alt="@sector.Item.Category" />
                        <div class="card-body d-flex flex-column">
                            <h3 class="h6 text-uppercase text-primary">@sector.Item.Category</h3>
                            <p class="text-muted flex-grow-1">@sector.Item.Description</p>
                            <a class="text-decoration-none fw-semibold" href="services">Learn More</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>

    <section class="bg-dark text-white py-5">
        <div class="container d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-3">
            <div>
                <h2 class="h4 fw-semibold mb-1">Ready to work with us?</h2>
                <p class="mb-0 text-white-50">@content.PartnershipsText</p>
            </div>
            <a class="btn btn-primary" href="contact">Contact Us</a>
        </div>
    </section>
}

@code {
    [Inject]
    public ContentService ContentService { get; set; } = default!;

    [Inject]
    public AssetManifestService AssetManifestService { get; set; } = default!;

    private SiteContent? content;
    private AssetManifest? assetManifest;
    private IReadOnlyList<(ServiceItem Item, string Image)> SectorCards => BuildSectorCards();

    protected override async Task OnInitializedAsync()
    {
        var contentTask = ContentService.GetContentAsync();
        var manifestTask = AssetManifestService.GetManifestAsync();
        await Task.WhenAll(contentTask, manifestTask);
        content = contentTask.Result;
        assetManifest = manifestTask.Result;
    }

    private IReadOnlyList<(ServiceItem Item, string Image)> BuildSectorCards()
    {
        if (content is null || assetManifest is null || content.Services.Count == 0)
        {
            return Array.Empty<(ServiceItem, string)>();
        }

        var images = new[]
        {
            assetManifest.MaritimeOilGas,
            assetManifest.Diving,
            assetManifest.Power
        };

        return content.Services
            .Select((item, index) => (Item: item, Image: index < images.Length ? images[index] : string.Empty))
            .Where(entry => !string.IsNullOrWhiteSpace(entry.Image))
            .ToList();
    }
}
